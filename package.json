{
  "name": "mern-stack-project",
  "version": "1.0.0",
  "description": "Web-to-MCP: AI-Powered Website Component Capture System - Full-Stack MERN Project by Shreyansh Arora (24bcs10252)",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python3 demo_server.py",
    "build": "npm run build:frontend && npm run build:extension",
    "build:frontend": "cd frontend && npm run build",
    "build:extension": "cd extension && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../extension && npm install",
    "start": "npm run dev"
  },
  "keywords": [
    "mern",
    "react",
    "django",
    "chrome-extension",
    "ai",
    "mcp",
    "web-development",
    "full-stack"
  ],
  "author": "Shreyansh Arora (24bcs10252)",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shreyhac/MERN-STACK-PROJECT.git"
  },
